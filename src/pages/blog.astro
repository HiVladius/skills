---
import Footer from '../components/Footer.astro';
import '../styles/global.css';


const allPost = Astro.glob('../pages/posts/*.md');

const pageTitle = 'Mi Blog';
const description = 'Bienvenido a mi blog. Aquí encontrarás artículos sobre diversos temas.';

const allPosts = [
  {
    title: 'Mi primera publicación',
    slug: 'post-1',
    excerpt: 'Esta es mi primera publicación en el blog.'
  },
  {
    title: 'Mi segunda publicación',
    slug: 'post-2',
    excerpt: 'Continuamos con más artículos interesantes.'
  },
  {
    title: 'Mi tercera publicación',
    slug: 'post-3',
    excerpt: 'Seguimos compartiendo conocimientos y experiencias.'
  }
];
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{pageTitle}</title>
</head>
<body>
  <div class="container-main">
    <nav class="nav-container">
    
      <a href="/blog">Blog</a>
      <a href="/about">About</a>
    </nav>
    
    <h1>{pageTitle}</h1>
    
    <p class="mb-8 text-lg">{description}</p>

    <div class="space-y-6">
      {allPosts.map(post => (
        <article class="card hover:shadow-md transition-shadow">
          <h2 class="text-xl font-bold">{post.title}</h2>
          <p class="text-slate-600 mb-3">{post.excerpt}</p>
          <a href={`/posts/${post.slug}`} class="button-primary inline-block">
            Leer más
          </a>
        </article>
      ))}
    </div>
  </div>
    <Footer />
</body>

</html>